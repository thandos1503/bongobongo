		{
			"name": "Fetch Account Details",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const Ajv = require('ajv');\r",
							"const ajv = new Ajv({ allErrors: true });\r",
							"\r",
							"const schema = {\r",
							"  \"$schema\": \"http://json-schema.org/draft-07/schema#\",\r",
							"  \"title\": \"UserResponse\",\r",
							"  \"type\": \"object\",\r",
							"  \"properties\": {\r",
							"    \"data\": {\r",
							"      \"type\": \"object\",\r",
							"      \"properties\": {\r",
							"        \"id\": { \"type\": \"integer\" },\r",
							"        \"email\": { \"type\": \"string\", \"format\": \"email\" },\r",
							"        \"first_name\": { \"type\": \"string\" },\r",
							"        \"last_name\": { \"type\": \"string\" },\r",
							"        \"avatar\": { \"type\": \"string\", \"format\": \"uri\" }\r",
							"      },\r",
							"      \"required\": [\"id\", \"email\", \"first_name\", \"last_name\", \"avatar\"]\r",
							"    },\r",
							"    \"support\": {\r",
							"      \"type\": \"object\",\r",
							"      \"properties\": {\r",
							"        \"url\": { \"type\": \"string\", \"format\": \"uri\" },\r",
							"        \"text\": { \"type\": \"string\" }\r",
							"      },\r",
							"      \"required\": [\"url\", \"text\"]\r",
							"    }\r",
							"  },\r",
							"  \"required\": [\"data\", \"support\"]\r",
							"};\r",
							"\r",
							"const response = pm.response.json();\r",
							"const validate = ajv.compile(schema);\r",
							"const valid = validate(response);\r",
							"\r",
							"pm.test(\"Post-login, verify user data response format\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"\r",
							"    pm.expect(response.data).to.have.property(\"id\", 2);\r",
							"    pm.expect(response.data).to.have.property(\"email\");\r",
							"    pm.expect(response.data).to.have.property(\"first_name\");\r",
							"    pm.expect(response.data).to.have.property(\"last_name\");\r",
							"    pm.expect(response.data).to.have.property(\"avatar\");\r",
							"\r",
							"    pm.expect(valid, JSON.stringify(validate.errors)).to.be.true;\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
